<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/Theme.ActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light" />

    <style name="MovieTitleStyle">
        <item name="android:textColor">@color/card_movie_title_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MovieGradeTitleStyle">
        <item name="android:textColor">@color/card_grade_title_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MovieGradeStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
